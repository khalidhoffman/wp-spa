#wp-spa
  .settings
    input[type='text'],
    input[type='url'],
    input[type='number'],
    textarea
      width 100%;
    /__content
      width 100%
      display flex
      flex-wrap wrap
      align-items flex-start
      max-width: em-auto(1080)
      margin 0 auto
    .setting-section
      flex 1 1 auto
      &/--demo
        flex-basis 15em;
      &/--vars
        tr
          > td
            display inline-block
