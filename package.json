{
  "name": "wp-spa",
  "version": "1.7.6",
  "description": "Converts a WordPress site to a SPA",
  "main": "index.php",
  "scripts": {
    "test": "jasmine",
    "zip": "zip -r --exclude={admin,public}/js/src/* --exclude=*.git* --exclude=*.zip --exclude=*node_modules* ./wp-spa.zip ./",
    "webpack": "webpack --display-reasons",
    "build:js": "gulp build-webpack",
    "build:css": "gulp stylus && gulp css",
    "watch:build:js": "onchange -i -k -d 2000 'public/js/src/**/*.{js,ts}' -- npm run build:js",
    "watch:build:css": "onchange -i 'public/js/src/**/*.styl' -- npm run build:css",
    "screen:build:js": "cd ~/nodejs/wp-spa; screen -S spa_js -d -m npm run watch:build:js",
    "screen:build:css": "cd ~/nodejs/wp-spa; screen -S spa_css -d -m npm run watch:build:css",
    "install:composer": "composer install",
    "setup": "weblee setup"
  },
  "repository": {
    "type": "git",
    "url": "kah8br@khalidhoffman.net:/home/kah8br/nodejs/wp-spa.git"
  },
  "keywords": [
    "WordPress",
    "SPA",
    "Plugin"
  ],
  "author": "Khalid Hoffman",
  "license": "ISC",
  "devDependencies": {
    "@types/jquery": "^3.3.29",
    "@types/node": "^11.13.4",
    "exports-loader": "^0.6.3",
    "expose-loader": "^0.7.1",
    "imports-loader": "^0.6.5",
    "json-loader": "^0.5.4",
    "raw-loader": "^3.1.0",
    "tooltipster": "^4.1.6",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "weblee-utils": "git+https://github.com/webleedev/weblee-utils.git",
    "webpack": "^4.39.0",
    "webpack-bundle-analyzer": "^3.4.1"
  },
  "dependencies": {}
}
